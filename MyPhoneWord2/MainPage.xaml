<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPhoneWord2.MainPage"
             Background="DarkBlue">

    <StackLayout
    Spacing="15"
        VerticalOptions="CenterAndExpand"
    Padding="20"
        >
        <Label Text="Ingresar un número telefónico escrito con letras (por ejemplo, INFO-LINE como 4636-5463)."
               HorizontalTextAlignment="Center"
           FontSize="20"></Label>
        
        <Entry x:Name="NumeroTelefonoTexto"
               HorizontalTextAlignment="Center"
           Text="" Placeholder="ABC = 222 | DEF = 333 | GHI = 444 ..."/>
        
        <Button x:Name="BtnTraducir"
            Text="Traducir"
                TextColor="DarkGreen"
                BackgroundColor="White"
                CornerRadius="19"
            Clicked="OnTranslate"/>
        
        <Button x:Name="Btnllamar"
            Text="Ingresar numero en letras"
                TextColor="White"
                BackgroundColor="#147614"
            IsEnabled="False"
            CornerRadius="19"
            Clicked="OnCall"/>

        <Label
            Text="Microsoft Learnig | Alexis Gutierrez"
            HorizontalOptions="Center"
            TextColor="Gray"
            />
    </StackLayout>

</ContentPage>
